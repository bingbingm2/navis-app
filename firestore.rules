rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // Itinerary collection with nested subcollections
    match /itinerary/{tripId} {
      // Allow user to read their own trips
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Allow user to create new trips
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // Allow user to update/delete their own trips
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Days subcollection - simplified for batch writes
      match /days/{dayId} {
        // Allow authenticated users to write during batch operations
        allow read, write: if isAuthenticated();
        
        // Activities subcollection
        match /activities/{activityId} {
          // Allow authenticated users to write during batch operations
          allow read, write: if isAuthenticated();
        }
      }
    }
    
    // Legacy trips collection (FIXED: was "itinerary" should be "trips")
    match /trips/{tripId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Waitlist collection - public write access for signups
    match /waitlist/{entryId} {
      // Anyone can create a waitlist entry (public signup)
      allow create: if true;
      // Only allow read/update/delete if document doesn't exist (prevents overwrites)
      // Or for admin access (you can add admin check later)
      allow read: if false;
      allow update, delete: if false;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}